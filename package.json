{
  "name": "@anthropic/design-system-mcp",
  "version": "1.0.0",
  "description": "MCP server for Insider Design System - provides component metadata, documentation, and code generation",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "design-system-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "start": "node dist/index.js",
    "extract:components": "tsx scripts/extract-components.ts",
    "extract:enrich": "tsx scripts/auto-enrich.ts",
    "extract:merge": "tsx scripts/merge-datasets.ts",
    "extract:storybook": "tsx scripts/extract-storybook.ts",
    "extract:usage": "tsx scripts/extract-usage.ts",
    "extract:argtypes": "tsx scripts/sync-argtypes-to-enrichments.ts",
    "generate:markdown": "tsx scripts/generate-markdown.ts",
    "extract:all":  "npm run extract:components && npm run extract:enrich && npm run extract:argtypes && npm run extract:merge && npm run generate:markdown && npm run build",
    "extract:full": "npm run extract:components && npm run extract:storybook && npm run extract:usage && npm run extract:argtypes && npm run extract:merge && npm run generate:markdown",
    "validate:docs": "tsx scripts/validate-docs.ts",
    "validate:docs:component": "tsx scripts/validate-docs.ts",
    "sync:docs": "tsx scripts/sync-docs.ts",
    "sync:docs:component": "tsx scripts/sync-docs.ts",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:data": "node test-scripts/test-data.js",
    "test:production": "NODE_ENV=production node test-scripts/test-production.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "typecheck": "tsc --noEmit",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "design-system",
    "insider",
    "vue",
    "components",
    "ai",
    "claude"
  ],
  "author": "Insider",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^1.6.0",
    "@vue/compiler-sfc": "^3.4.0",
    "cheerio": "^1.0.0",
    "eslint": "^8.57.0",
    "globby": "^14.0.0",
    "tsup": "^8.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.4.0",
    "vitest": "^1.6.0"
  },
  "files": [
    "dist",
    "README.md",
    "CLAUDE.md"
  ]
}
