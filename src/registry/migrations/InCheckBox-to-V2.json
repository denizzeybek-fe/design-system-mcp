      "complexity": "low",
      "breakingChange": true,
      "notes": "V2 uses -status suffix pattern"
    },
    "label": {
      "v1Type": "string",
      "v2Type": "string",
      "v2Prop": "labelText",
      "transformCode": "// Direct rename\nlabel-text=\"Checkbox Label\"",
      "autoMigratable": true,
      "complexity": "low",
      "breakingChange": true,
      "notes": "V2 uses -text suffix for text props"
    },
    "value": {
      "v1Type": "boolean",
      "v2Type": "boolean",
      "v2Prop": "checked",
      "transformCode": "// Rename value to checked\n:checked=\"isChecked\"",
      "autoMigratable": true,
      "complexity": "low",
      "breakingChange": true,
      "notes": "V2 uses 'checked' instead of 'value'"
    },
    "id": {
      "v1Type": "string",
      "v2Type": "string",
      "v2Prop": "id",
      "transformCode": "// Same prop\nid=\"checkbox-1\"",
      "autoMigratable": true,
      "complexity": "low",
      "breakingChange": false,
      "notes": "Same prop name"
    },
    "name": {
      "v1Type": "string",
      "v2Type": "string",
      "v2Prop": "name",
      "transformCode": "// Same prop\nname=\"checkbox-field\"",
      "autoMigratable": true,
      "complexity": "low",
      "breakingChange": false,
      "notes": "Same prop name"
    }
  },

  "eventMigrations": {
    "@change": {
      "v1Event": "@change",
      "v2Event": "@click",
      "v1Payload": "boolean",
      "v2Payload": "Event",
