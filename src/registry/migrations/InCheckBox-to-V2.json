  "migrationSteps": [
    {
      "step": 1,
      "title": "Update import",
      "before": "import { InCheckBox } from '@useinsider/design-system-vue';",
      "after": "import { InCheckBoxV2 } from '@useinsider/design-system-vue';",
      "automated": true
    },
    {
      "step": 2,
      "title": "Update component name",
      "before": "<InCheckBox ...",
      "after": "<InCheckBoxV2 ...",
      "automated": true
    },
    {
      "step": 3,
      "title": "Rename disabled prop",
      "before": ":disabled=\"isDisabled\"",
      "after": ":disabled-status=\"isDisabled\"",
      "automated": true
    },
    {
      "step": 4,
      "title": "Rename label prop",
      "before": "label=\"Accept terms\"",
      "after": "label-text=\"Accept terms\"",
      "automated": true
    },
    {
      "step": 5,
      "title": "Rename value to checked",
      "before": ":value=\"isChecked\"",
      "after": ":checked=\"isChecked\"",
      "automated": true
    },
    {
      "step": 6,
      "title": "Update event handler",
      "before": "@change=\"handleChange\"",
      "after": "@click=\"handleClick\"",
      "automated": true,
      "notes": "V2 uses click event instead of change"
    }
  ],

  "fullExampleBefore": "<!-- V1 Implementation -->\n<template>\n  <InCheckBox\n    id=\"terms-checkbox\"\n    name=\"terms\"\n    label=\"I accept the terms and conditions\"\n    :value=\"accepted\"\n    :disabled=\"isDisabled\"\n    @change=\"handleChange\"\n  />\n</template>\n\n<script>\nimport { InCheckBox } from '@useinsider/design-system-vue';\n\nexport default {\n  components: { InCheckBox },\n  data() {\n    return {\n      accepted: false,\n      isDisabled: false\n    };\n  },\n  methods: {\n    handleChange(value) {\n      this.accepted = value;\n    }\n  }\n};\n</script>",

  "fullExampleAfter": "<!-- V2 Implementation -->\n<template>\n  <InCheckBoxV2\n    id=\"terms-checkbox\"\n    name=\"terms\"\n    label-text=\"I accept the terms and conditions\"\n    :checked=\"accepted\"\n    :disabled-status=\"isDisabled\"\n    @click=\"handleClick\"\n  />\n</template>\n\n<script>\nimport { InCheckBoxV2 } from '@useinsider/design-system-vue';\n\nexport default {\n  components: { InCheckBoxV2 },\n  data() {\n    return {\n      accepted: false,\n      isDisabled: false\n    };\n  },\n  methods: {\n    handleClick() {\n      this.accepted = !this.accepted;\n    }\n  }\n};\n</script>",

  "commonPitfalls": [
    {
      "pitfall": "Using :value instead of :checked",
      "impact": "Checkbox state not bound correctly",
      "solution": "Use :checked=\"value\" in V2"
    },
    {
      "pitfall": "Using @change instead of @click",
      "impact": "Event handler not triggered",
      "solution": "V2 uses @click event"
    },
    {
      "pitfall": "Forgetting to rename label to labelText",
      "impact": "Checkbox appears without label",
      "solution": "Use label-text=\"Your Label\""
    }
  ],

